<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.project_develop_team.managetransportation.SaveListActivity">

    <Button
        android:id="@+id/saveListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="61dp"
        android:background="@color/colorPrimary"
        android:text="@string/save"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/taskNameTextView"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:text="nameTask"
        android:layout_below="@+id/accountImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/taskAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="addressTask"
        android:textSize="14sp"
        android:layout_below="@+id/taskNameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <ImageView
        android:id="@+id/accountImageView"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/ic_action_account"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="20dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textSize="18sp"
        tools:text="name"
        android:layout_marginBottom="23dp"
        android:layout_alignBottom="@+id/accountImageView"
        android:layout_toRightOf="@+id/accountImageView"
        android:layout_toEndOf="@+id/accountImageView" />

    <TextView
        android:id="@+id/taskPhoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="phoneTask"
        android:layout_below="@+id/taskAddressTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
