<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/task_name_text_view"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="task_name" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/task_name_text_view"
            android:orientation="vertical">

            <TextView
                android:id="@+id/task_address_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="task_address" />

            <TextView
                android:id="@+id/task_phone_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_address_text_view"
                android:textSize="14sp"
                tools:text="task_phone" />

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_phone_text_view"
                android:layout_marginTop="2dp"
                android:textColor="#8c8c8c"
                android:textSize="13sp"
                tools:text="@string/text_title" />

            <ImageView
                android:id="@+id/car_image_view"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/task_phone_text_view"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/title_text_view"
                android:layout_toRightOf="@+id/title_text_view"
                android:contentDescription="@string/image_ic_car"
                android:src="@drawable/ic_transport" />

            <TextView
                android:id="@+id/duration_distance_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title_text_view"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/car_image_view"
                android:layout_toRightOf="@+id/car_image_view"
                tools:text="duration_distance" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
